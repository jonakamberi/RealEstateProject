@model RealEstateProject.Models.Property

@{
    ViewData["Title"] = "Details";
}



<div class="row" style="margin-top: 30px;">
    <div class="col-md-12">
        <ol class="breadcrumb">
          <li><a asp-action="Index">List of properties</a></li>
          <li class="active">@Model.title</li>
        </ol>
    </div>
</div>

<div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="thumbnail">
                    <img style="height: 250px" src="@Model.URL" class="responsive">
                </div>
            </div>
            <div class="col-md-9">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => model.title)</h3>
                    <p>
                        <strong>Description:</strong> 
                        @Html.DisplayFor(model => model.description)
                    </p>
                    <p>
                        <strong>Rooms:</strong> 
                        @Html.DisplayFor(model => model.rooms)
                    </p>
                    <p>
                        <strong>Address:</strong> 
                        @Html.DisplayFor(model => model.address)
                    </p>
                    <p>
                        <strong>Price:</strong> 
                        @string.Format("{0:â‚¬ #,###.##}", @Model.price)
                    </p>
                        <p>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info" role="button">Edit</a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" role="button">Delete</a>
                            }
                        </p>
                    </div>
            </div>
        </div>
   </div>
</div>
